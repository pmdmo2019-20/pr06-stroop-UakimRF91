<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.preference.PreferenceCategory android:title="@string/settings_game_title">

        <androidx.preference.ListPreference
            android:defaultValue="@string/prefGameMode_defaultValue"
            android:dialogTitle="@string/prefGameMode_title"
            android:entries="@array/prefGameMode_entries"
            android:entryValues="@array/prefGameMode_entryValues"
            android:icon="@drawable/ic_game_mode_black_24dp"
            android:key="@string/prefGameMode_key"
            android:title="@string/prefGameMode_title"
            app:useSimpleSummaryProvider="true" />

        <androidx.preference.ListPreference
            android:defaultValue="@string/prefGameTime_defaultValue"
            android:dialogTitle="@string/prefGameTime_title"
            android:entries="@array/prefGameTime_entries"
            android:entryValues="@array/prefGameTime_entryValues"
            android:icon="@drawable/ic_game_time_black_24dp"
            android:key="@string/prefGameTime_key"
            android:title="@string/prefGameTime_title"
            app:useSimpleSummaryProvider="true" />

        <androidx.preference.ListPreference
            android:defaultValue="@string/prefWordTime_defaultValue"
            android:dialogTitle="@string/prefWordTime_title"
            android:entries="@array/prefWordTime_entries"
            android:entryValues="@array/prefWordTime_entryValues"
            android:icon="@drawable/ic_word_time_black_24dp"
            android:key="@string/prefWordTime_key"
            android:title="@string/prefWordTime_title"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            android:defaultValue="@string/prefAttempts_defaultValue"
            android:dialogTitle="@string/prefAttempts_dialogTitle"
            android:icon="@drawable/ic_attempts_black_24dp"
            android:inputType="number"
            android:key="@string/prefAttempts_key"
            android:singleLine="true"
            android:title="@string/prefAttempts_title"
            app:useSimpleSummaryProvider="true" />

    </androidx.preference.PreferenceCategory>

    <androidx.preference.PreferenceCategory android:title="@string/settings_ranking_title">

        <androidx.preference.ListPreference
            android:defaultValue="@string/prefRankingFilter_defaultValue"
            android:dialogTitle="@string/prefRankingFilter_title"
            android:entries="@array/ranking_spnGameMode"
            android:entryValues="@array/ranking_spnGameMode_values"
            android:icon="@drawable/ic_filter_list_black_24dp"
            android:key="@string/prefRankingFilter_key"
            android:title="@string/prefRankingFilter_title"
            app:useSimpleSummaryProvider="true" />

    </androidx.preference.PreferenceCategory>


</PreferenceScreen>